{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "checkJs": false,
    "noEmitOnError": false
  },
  "include": ["src/index.ts", "src/code.ts", "src/gancube.ts", "src/aes128.ts", "src/utils.ts", "src/rand.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "src/App.tsx", "src/main.tsx", "src/mathlib.js"]
}